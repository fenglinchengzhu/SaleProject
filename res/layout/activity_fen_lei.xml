<?xml version="1.0" encoding="utf-8"?>
<com.goldwind.app.help.view.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/top_bar_normal_bg">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"
                android:text="小说"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/img_back" />
        </RelativeLayout>

        <View
            android:id="@+id/view_top_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dddddd" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c7"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.goldwind.app.help.view.TabPageIndicator
                            android:id="@+id/tabPageIndicator"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:overScrollMode="never"></com.goldwind.app.help.view.TabPageIndicator>


                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:drawablePadding="3dp"
                            android:drawableRight="@drawable/img_arrow_dowm"
                            android:gravity="center_horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="更多"
                            android:textColor="#ffF5DAC0"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_dash_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/shape_dash_line"></View>

                    <com.goldwind.app.help.view.FlowLayout
                        android:id="@+id/flow_fen_lei_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        flowlayout:horizontal_spacing="8dp"
                        flowlayout:vertical_spacing="8dp"></com.goldwind.app.help.view.FlowLayout>
                </LinearLayout>

                <com.goldwind.app.help.view.XListView
                    android:id="@+id/lv_tui_jian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/alpha"
                    android:dividerHeight="0dp"
                    android:listSelector="@drawable/ripple_bg_4"
                    android:scrollbarSize="3dip"
                    android:scrollbarThumbVertical="@drawable/drawable_scrollbar"></com.goldwind.app.help.view.XListView>
            </LinearLayout>

            <View
                android:id="@+id/view_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pic_anim"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000" />

</com.goldwind.app.help.view.SildingFinishLayout>