<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/knowledge_bg"
    android:orientation="vertical"
    tools:context="com.goldwind.app.help.fragment.KnowledgeDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/afc_30dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10_padding"
        android:paddingRight="@dimen/dp_10_padding">

        <Button
            android:id="@+id/frag_knowledge_detail_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/orange"
            android:text="@string/str_search"
            android:textSize="@dimen/txt_24_size" />

        <com.goldwind.app.help.view.ClearEditText
            android:id="@+id/frag_knowledge_detail_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20_padding"
            android:layout_toLeftOf="@id/frag_knowledge_detail_search_btn"
            android:background="@color/white"
            android:drawableRight="@drawable/delete_selector"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5_padding"
            android:textSize="@dimen/txt_20_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60_padding"
        android:paddingLeft="@dimen/dp_10_padding"
        android:paddingRight="@dimen/dp_10_padding">

        <ListView
            android:id="@+id/frag_knowledge_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/afc_30dp"
            android:fadingEdge="none" />
    </LinearLayout>

</LinearLayout>
