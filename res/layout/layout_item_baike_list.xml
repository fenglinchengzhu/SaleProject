<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="32px"
        android:paddingRight="32px"
        android:paddingTop="50px">

        <me.xiaopan.sketch.SketchImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/baike__frag_item_img_width"
            android:layout_height="@dimen/baike__frag_item_img_height"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_time"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="XXXXXXXXXXXdddddddddddddddddddd"
                    android:textColor="#333333"
                    android:textSize="@dimen/txt_18_size" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:text="16-02-01"
                    android:textColor="#ff888888"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="XXXXXXXXXXXsdasdsadas\nsdsadadsadasdasdsadksfdjaslfjsadlkfjdsklfjl;sdjflsad"
                android:textColor="#999999"
                android:textSize="@dimen/txt_14_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#FFCCCCCC" />

</FrameLayout>